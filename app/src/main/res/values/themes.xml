<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EBookPahlawan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="regularFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/a_plainer_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="regularFont2">
        <item name="android:textColor">#825228</item>
        <item name="android:fontFamily">@font/a_plainer_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
    </style>
</resources>