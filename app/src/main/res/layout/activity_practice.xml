<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_brown"
    tools:context=".view.PracticeActivity">

    <ImageView
        android:id="@+id/add_photo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_practice_img_placeholder" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="250dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="@+id/add_photo"
        app:layout_constraintStart_toStartOf="@+id/add_photo"
        app:layout_constraintTop_toBottomOf="@+id/add_photo"
        app:srcCompat="@drawable/ic_practice_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView31">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_HeroName"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_practice_bg_edtext"
                android:hint="Masukan nama pahlawan"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edt_heroBirthDate"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_practice_bg_edtext"
                android:hint="Masukan tanggal lahir pahlawan"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_HeroName"
                app:layout_constraintStart_toStartOf="@+id/edt_HeroName"
                app:layout_constraintTop_toBottomOf="@+id/edt_HeroName" />

            <EditText
                android:id="@+id/edt_heroDeceasedDate"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_practice_bg_edtext"
                android:hint="Masukan tanggal wafatnya pahlawan"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_heroBirthDate"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edt_heroBirthDate"
                app:layout_constraintTop_toBottomOf="@+id/edt_heroBirthDate" />

            <EditText
                android:id="@+id/edt_heroKeterangan"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_practice_bg_edtext"
                android:hint="Masukkan keterangan pahlawan"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_heroBirthDate"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edt_heroBirthDate"
                app:layout_constraintTop_toBottomOf="@+id/edt_heroDeceasedDate" />

            <EditText
                android:id="@+id/edt_heroPeran"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_practice_bg_edtext"
                android:hint="Masukan peran dan deskripsi pahlawan"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edt_heroDeceasedDate"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/edt_heroDeceasedDate"
                app:layout_constraintTop_toBottomOf="@+id/edt_heroKeterangan" />

            <Button
                android:id="@+id/imageButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#AC623D"
                android:fontFamily="@font/a_plainer_font"
                android:padding="15dp"
                android:text="Selesai"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edt_heroPeran"
                app:layout_constraintStart_toStartOf="@+id/edt_heroPeran"
                app:layout_constraintTop_toBottomOf="@+id/edt_heroPeran" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>