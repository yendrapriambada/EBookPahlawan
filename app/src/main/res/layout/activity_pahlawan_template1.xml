<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_template1"
    android:fillViewport="true"
    tools:context=".view.PahlawanTemplate1Activity">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="313dp"
        android:layout_height="133dp"
        android:layout_marginTop="-38dp"
        android:src="@drawable/banner_contoh_pahlawan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/foto_pahlawan"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="@+id/banner"
        app:layout_constraintStart_toStartOf="@+id/banner"
        app:layout_constraintTop_toBottomOf="@id/banner" />

    <TextView
        android:id="@+id/nama_pahlawan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/a_plainer_font"
        android:gravity="center"
        android:text="ABDUL KADIR RADEN TEMENGGUNG"
        android:textColor="#FFDE58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto_pahlawan" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_pahlawan">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- First row -->
            <TextView
                android:id="@+id/cell1"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:text="Lahir"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cell2"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                app:layout_constraintStart_toEndOf="@+id/cell4"
                app:layout_constraintTop_toTopOf="@+id/cell1" />

            <TextView
                android:id="@+id/lahir_pahlawan"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="Sintang, Kalimantan Barat, 1771"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cell2"
                app:layout_constraintTop_toTopOf="@+id/cell2" />

            <!-- Second row -->
            <TextView
                android:id="@+id/cell4"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/a_plainer_font"
                android:text="Meninggal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cell1"
                app:layout_constraintTop_toBottomOf="@+id/lahir_pahlawan" />

            <TextView
                android:id="@+id/cell5"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                app:layout_constraintLeft_toRightOf="@id/cell4"
                app:layout_constraintTop_toTopOf="@+id/cell4" />

            <TextView
                android:id="@+id/wafat_pahlawan"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Melawi, kalimantan barat, 1875"
                app:layout_constraintEnd_toEndOf="@+id/lahir_pahlawan"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cell5"
                app:layout_constraintTop_toBottomOf="@id/lahir_pahlawan" />

            <!-- Third row -->
            <TextView
                android:id="@+id/keterangan_pahlawan"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kepala Pemerintahan Melawi yang merupakan anggota dari Kerajaan Sintang"
                app:layout_constraintEnd_toEndOf="@+id/wafat_pahlawan"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cell4"
                app:layout_constraintTop_toBottomOf="@+id/wafat_pahlawan" />

            <TextView
                android:id="@+id/peran_pahlawan"
                style="@style/regularFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_peran"
                android:gravity="center"
                android:padding="10dp"
                android:text="Kepala Pemerintahan Melawi yang merupakan anggota dari Kerajaan Sintang beliau mengembangkan potensi ekonomi di daerah melawi dan juga diam-diam menghimpun kekuatan rakyat dan mengakses seluruh informasi untuk melawan belanda"
                app:layout_constraintEnd_toEndOf="@+id/keterangan_pahlawan"
                app:layout_constraintStart_toStartOf="@+id/keterangan_pahlawan"
                app:layout_constraintTop_toBottomOf="@+id/keterangan_pahlawan" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>